@model IEnumerable<QuanLyDiem.Models.QLLop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Sách Lớp Học</h2>

<p>
    @Html.ActionLink("Thêm lớp học", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NienKhoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiSo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GhiChu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenLop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NienKhoa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SiSo)
    </td>
    <td>
        @Html.Raw(item.GhiChu)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaLop }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaLop }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLop })
    </td>
</tr>
}

</table>
