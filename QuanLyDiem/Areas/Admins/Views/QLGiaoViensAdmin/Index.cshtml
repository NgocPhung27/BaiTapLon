@model IEnumerable<QuanLyDiem.Models.QLGiaoVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Sách Giáo Viên</h2>

<p>
    @Html.ActionLink("Thêm giáo viên", "Create")
</p>

@using (Html.BeginForm("QLGiaoVien", "QLGiaoViensAdmin", FormMethod.Post, new
{ enctype = "multipart/form-data" }))
{
    <div>
        @Html.TextBox("file", "", new { type = "file" })<br />
        <input type="submit" value="Upload" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaGV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QLMonHoc.TenMH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenGV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnhGV)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaGV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QLMonHoc.TenMH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenGV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgaySinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoDienThoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.Raw(item.AnhGV)
    </td>
    <td>
        @Html.ActionLink("sửa", "Edit", new { id = item.MaGV }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGV }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaGV })
    </td>
</tr>
    }

</table>
